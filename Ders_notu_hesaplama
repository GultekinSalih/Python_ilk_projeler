 yazili1= int(input("1.yazılı notu giriniz: "))
 yazili2= int(input("2.yazılı notu giriniz: "))
 dersici1= int(input("1.ders içi notu giriniz: "))
 dersici2= int(input("2.ders içi notu giriniz: "))
 dersici3= int(input("3.ders içi notu giriniz: "))
 proje= int(input("proje notu giriniz: "))
 ortalama=int(((yazili1+yazili2)+((dersici1+dersici2+dersici3)/3)+(proje))/4)
 print(ortalama)
